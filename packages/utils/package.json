{
  "name": "@jointorg/utils",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js",
      "require": "./build/index.cjs",
      "default": "./build/index.js"
    },
    "./*": {
      "types": "./build/lib/*.d.ts",
      "import": "./build/lib/*.js",
      "require": "./build/lib/*.cjs",
      "default": "./build/lib/*.js"
    }
  },
  "prettier": "@jointorg/prettier-config",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "typecheck": "tsc --noEmit && tsup --silent",
    "lint": "eslint . && prettier --check .",
    "format": "eslint --fix . && prettier --write .",
    "check": "pnpm run typecheck && pnpm run lint"
  },
  "devDependencies": {
    "@jointorg/prettier-config": "workspace:^",
    "@jointorg/tsconfig": "workspace:^",
    "@jointorg/tsup-config": "workspace:^",
    "@jointorg/types": "workspace:^",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
