{
  "name": "glore",
  "version": "0.0.1",
  "homepage": "https://elearning.glorecertificate.net",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/francojoint/glore.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "prettier": "@jointorg/prettier-config",
  "scripts": {
    "prepare": "husky",
    "dev": "(pnpm run build:watch &)>/dev/null && turbo run dev",
    "build": "turbo run build",
    "build:watch": "turbo run build:watch",
    "start": "turbo run start",
    "test": "turbo run test",
    "typecheck": "pnpm run root/typecheck && turbo run typecheck",
    "lint": "pnpm run root/lint && turbo run lint",
    "format": "pnpm run root/format && turbo run format",
    "check": "pnpm run root/check && turbo run check",
    "release": "dotenv release-it --",
    "root/dev": "(pnpm run build:watch &)>/dev/null",
    "root/typecheck": "tsc --noEmit",
    "root/lint": "eslint . && prettier --check . && shellcheck .husky/commit-msg .husky/pre-push",
    "root/format": "eslint --fix . && prettier --write .",
    "root/check": "pnpm run root/typecheck && pnpm run root/lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/types": "^19.5.0",
    "@jointorg/eslint-config": "workspace:^",
    "@jointorg/prettier-config": "workspace:^",
    "@jointorg/tsconfig": "workspace:^",
    "@release-it/conventional-changelog": "^10.0.0",
    "@types/node": "catalog:",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "prettier": "catalog:",
    "release-it": "^18.1.2",
    "shellcheck": "catalog:",
    "turbo": "^2.4.2",
    "typescript": "catalog:"
  },
  "release-it": {
    "hooks": {
      "after:init": "pnpm run build && pnpm run check",
      "after:release": "echo Successfully released ${name}@${version}."
    },
    "git": {
      "push": true,
      "commitMessage": "chore: release v${version}",
      "pushArgs": [
        "--follow-tags",
        "--no-verify"
      ],
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "autoGenerate": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits"
        },
        "header": "# Changelog",
        "infile": "CHANGELOG.md"
      }
    }
  }
}
