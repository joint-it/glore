{
  "name": "glore",
  "version": "0.0.1",
  "homepage": "https://elearning.glorecertificate.net",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joint-it/glore.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "prettier": "@joint-it/prettier-config",
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "build:packages": "turbo build --filter=./packages/*",
    "build:watch": "turbo build:watch",
    "start": "turbo start",
    "test": "turbo test",
    "typecheck": "pnpm root#typecheck && turbo typecheck",
    "lint": "pnpm root#lint && turbo lint",
    "lint:fix": "pnpm root#lint:fix && turbo lint:fix",
    "check": "pnpm root#check && turbo check",
    "root#typecheck": "tsc --noEmit",
    "root#lint": "eslint . && prettier --check . && shellcheck .husky/commit-msg .husky/pre-push",
    "root#lint:fix": "eslint --fix . && prettier --write .",
    "root#check": "pnpm root#typecheck && pnpm root#lint",
    "release": "dotenv release-it --"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/types": "^19.5.0",
    "@joint-it/eslint-config": "workspace:^",
    "@joint-it/prettier-config": "workspace:^",
    "@joint-it/tsconfig": "workspace:^",
    "@release-it/bumper": "^7.0.1",
    "@release-it/conventional-changelog": "^10.0.0",
    "@types/node": "catalog:",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "prettier": "catalog:",
    "release-it": "^18.1.2",
    "shellcheck": "catalog:",
    "turbo": "^2.4.4",
    "typescript": "catalog:"
  },
  "release-it": {
    "hooks": {
      "after:init": "pnpm build && pnpm check",
      "after:release": "echo Successfully released ${name}@${version}."
    },
    "git": {
      "push": true,
      "commitMessage": "chore: release v${version}",
      "pushArgs": [
        "--follow-tags",
        "--no-verify"
      ],
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "autoGenerate": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          "apps/*/package.json",
          "package.json"
        ]
      },
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits"
        },
        "header": "# Changelog",
        "infile": "CHANGELOG.md"
      }
    }
  }
}
